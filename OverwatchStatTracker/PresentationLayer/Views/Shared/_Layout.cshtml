<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Overwatch Stat Tracker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    @if (Session["RoleID"] != null)
    {
        if ((int)Session["RoleID"] == 1)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Profile", "Profile", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Leaderboards", "Leaderboards", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Logout", "Logout", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav"></ul>
                    </div>
                </div>
            </div>
        }
        else if ((int)Session["RoleID"] == 2)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Profile", "Profile", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Leaderboards", "Leaderboards", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Admin", "AdminPanel", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Logout", "Logout", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav"></ul>
                    </div>
                </div>
            </div>
        }
        else if ((int)Session["RoleID"] == 3)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Profile", "Profile", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Leaderboards", "Leaderboards", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Admin", "AdminPanel", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                        @Html.ActionLink("Logout", "Logout", "User", new { area = "" }, new { @class = "navbar-brand nav-link" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav"></ul>
                    </div>
                </div>
            </div>
        }
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>